{% block page_body %}
   

      
   
   
      <div class="center-blc">
      <div class="info-compte">
        
        <form  method="POST" {{form_enctype(form)}}>
            
            
            
           
            
       
            <div class="input">
              <div class="title">Votre Avatar</div>
              <div class="cb"></div>
              <div class="bkg-img">
              {% if user.image != null %}
                 <img src="{{asset(user.image.webPath)}}" alt="avatar" height="199" width="199">
